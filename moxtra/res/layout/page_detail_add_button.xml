    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_page_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/action_bar_height"
        android:background="@drawable/general_toolbar_bg">

        <ImageButton
            android:id="@+id/add_page_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/header_bar_margin"
            android:background="@null"
            android:src="@drawable/add_page_close" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_page_container"
        android:layout_below="@+id/add_page_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="100dp"
        android:orientation="vertical" />

