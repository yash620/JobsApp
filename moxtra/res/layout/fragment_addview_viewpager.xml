<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_btn_add_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/action_bar_height"
        android:background="@drawable/general_toolbar_bg"
        android:visibility="gone">

        <com.moxtra.binder.widget.CheckableImageButton
            android:id="@+id/btn_add_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/add_page_button"
            android:layout_marginRight="@dimen/header_bar_margin" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mainview"
        android:layout_width="match_parent"
        android:layout_height="190dp" />

    <com.moxtra.binder.widget.IconPageIndicator
        android:id="@+id/addview_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/page_control" />

</LinearLayout><!-- From: file:/D:/workspace/SDK/ChatSDK/resources/res/layout/fragment_addview_viewpager.xml -->