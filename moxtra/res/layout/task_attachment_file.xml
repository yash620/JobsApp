<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moxtra="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.moxtra.binder.widget.RoundedImageView
        android:id="@+id/iv_file_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/file"
        moxtra:border_color="@android:color/darker_gray"
        moxtra:border_width="1dp"
        moxtra:corner_radius="8dp"
        moxtra:round_background="true" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_file_thumbnail"
        android:text="File Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_text_gray_darker" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_below="@+id/iv_file_thumbnail"
        android:background="@android:color/darker_gray"
        android:visibility="gone"></View>

</RelativeLayout><!-- From: file:/D:/workspace/SDK/ChatSDK/resources/res/layout/task_attachment_file.xml -->