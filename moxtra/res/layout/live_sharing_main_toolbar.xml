<?xml version="1.0" encoding="utf-8"?>

<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/vs_right"
    android:layout_gravity="right"
    android:clickable="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/page_detail_main_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/page_detail_bar_background"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height" />

        <ImageButton
            android:id="@+id/page_annotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:src="@drawable/page_annotation" />

        <CheckBox
            android:id="@+id/page_detail_laser_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/selector_annotation_laserpoint" />

        <ImageButton
            android:id="@+id/page_snap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:src="@drawable/snap_page" />

        <ImageButton
            android:id="@+id/detail_page_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:src="@drawable/detail_page_add" />

        <ImageButton
            android:id="@+id/detail_page_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:src="@drawable/detail_page_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height" />

        <ImageButton
            android:id="@+id/ds_page_snap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_detail_main_button_margin"
            android:background="@null"
            android:src="@drawable/snap_page" />
    </LinearLayout>

</ViewSwitcher>
