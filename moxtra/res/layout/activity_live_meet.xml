<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MX_RootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_border_solid_shape"
    android:padding="2dp">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/meet_control_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/sharing_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>

    <include layout="@layout/meet_control_headerbar"
        android:id="@+id/action_bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <include layout="@layout/meet_control_toolbar"
        android:id="@+id/action_bar_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:id="@+id/livechat_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_layout_height"
        android:visibility="gone"
        android:layout_gravity="bottom" />

    <include layout="@layout/network_indication" />
</FrameLayout><!-- From: file:/D:/workspace/SDK/ChatSDK/resources/res/layout/activity_live_meet.xml -->