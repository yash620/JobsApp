<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp"
    android:background="@android:color/black">

    <ImageButton
        android:id="@+id/btn_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/liveshare_audio" />

    <ImageButton
        android:id="@+id/btn_plist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/liveshare_participants" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_weight="1">

        <com.moxtra.binder.widget.Indicator
            android:id="@+id/btn_livechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/liveshare_chat" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/stateful_liveshare_screenshare" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/End"
        android:background="@null"
        android:id="@+id/btn_exit"
        android:textColor="#ffff0000" />

</LinearLayout><!-- From: file:/D:/workspace/SDK/ChatSDK/resources/res/layout/meet_control_toolbar_tablet.xml -->